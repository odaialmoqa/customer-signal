{
  "name": "customer-signal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "build:production": "NODE_ENV=production next build --turbopack",
    "start": "next start",
    "start:production": "NODE_ENV=production next start",
    "lint": "eslint",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:unit": "vitest --run src/test/unit",
    "test:integration": "VITEST_INTEGRATION=true vitest --run src/test/integration",
    "test:api": "vitest --run src/test/api",
    "test:e2e": "vitest --run src/test/e2e/critical-user-journeys.test.ts",
    "test:e2e:playwright": "playwright test",
    "test:accessibility": "vitest --run src/test/accessibility",
    "test:accessibility:playwright": "playwright test --config=playwright-a11y.config.ts",
    "test:performance": "vitest --config vitest.performance.config.ts --run",
    "test:performance:watch": "vitest --config vitest.performance.config.ts",
    "test:load": "node scripts/run-load-tests.js",
    "test:security": "vitest --run src/test/security",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:api && npm run test:e2e && npm run test:accessibility && npm run test:performance && npm run test:security",
    "optimize": "node scripts/optimize-performance.js",
    "benchmark": "vitest --run src/test/performance/benchmark.ts",
    "db:push": "./supabase-cli db push",
    "db:pull": "./supabase-cli db pull",
    "db:status": "./supabase-cli migration list",
    "supabase:start": "./supabase-cli start",
    "supabase:stop": "./supabase-cli stop",
    "supabase:status": "./supabase-cli status",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:functions": "./scripts/deploy-edge-functions.sh",
    "deploy:migrations": "./scripts/deploy-migrations.sh",
    "health:check": "./scripts/production-health-check.sh",
    "production:setup": "cp .env.production.example .env.production && echo 'Please update .env.production with your actual values'"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.56.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "exceljs": "^4.4.0",
    "ioredis": "^5.7.0",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^3.8.4",
    "lucide-react": "^0.541.0",
    "next": "15.5.0",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.48.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "jest-axe": "^9.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.48.2",
    "supabase": "^2.34.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.1"
  }
}
